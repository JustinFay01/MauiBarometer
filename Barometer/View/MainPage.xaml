<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barometer.MainPage"
             xmlns:viewmodel="clr-namespace:Barometer.ViewModel"
             x:DataType="viewmodel:BarometerViewModel">
   
    <Grid ColumnDefinitions="*,*"
          ColumnSpacing="5"
          RowDefinitions="*,*"
          RowSpacing="0"
          BackgroundColor="#cccccc">


        <Border 
            WidthRequest="200"
            HeightRequest="200"
            Stroke="#512bd4"
            BackgroundColor="white"
            StrokeShape="RoundRectangle 20 20 20 20">

            <Label Text="{Binding IsConnected}"
                   Margin="10"/>

            <Border.Shadow>
                <Shadow Brush="#cccccc"
                        Offset="10,10"
                        Opacity=".5"/>
            </Border.Shadow>
        </Border>


        <Border 
            Grid.Column="1"
            Grid.Row="0"
            Stroke="#512bd4"
            BackgroundColor="white"
            StrokeShape="RoundRectangle 20 20 20 20">

            <CollectionView
                ItemsSource="{Binding Values}"
                SelectionMode="None">
            </CollectionView>
                


        </Border>

        <Button Text="Start Connection"
                Grid.Row="1"
                Grid.Column="0"
                Padding="0"
                Command="{Binding OpenCommand}"/>



        <Button Text="Close Connection"
            Grid.Row="1"
            Grid.Column="1"
            Command="{Binding CloseCommand}"/>
    </Grid>


</ContentPage>
